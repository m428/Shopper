<!DOCTYPE html>
<html>
<head>
  <title>WanderApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="flash">
    <%= flash.notice %>
  </p>
  <div id="container">
    <div id="content">
      <%= yield %>
      <!-- <hr> -->
      <!-- creates footer displaying user login status -->
      <div id="login-status">
        <h6>
          <% if logged_in? %>
            <%= "Logged in as #{current_user.username}" %>
            <%= link_to "Logout", logout_path %>
          <% else %>
            Logged out |
            <%= link_to "Login", login_path %>
          <% end %>
        </h6>
      </div>
    </div>
  </div>
</body>
